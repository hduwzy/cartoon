<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.itcast.cartoon.collection.domain">
	<class name="Collection" table="collection">
		<id name="coid">
			<generator class="native"></generator>
		</id>
		<property name="pname"></property>
		<property name="read_record"></property>
		<many-to-one name="User" class="cn.itcast.cartoon.user.domain.User" column="uid"></many-to-one>
	</class>
</hibernate-mapping>